@model Admin
<link rel="stylesheet" href="/css/changeButton.css">
<link rel="stylesheet" href="/css/forms.css">

<partial name="_profile"></partial>

@if (TempData["Message"] != null)
{
    <div class="change">@TempData["Message"]</div>
}

<div>
    <div>
        <form asp-action="Save" method="post">
            <input asp-for="id" type="hidden" />
            <div>
                <label asp-for="username">Username</label>
                <input asp-for="username" value="@ViewBag.User.username"/>
            </div>
            <div>
                <label asp-for="name" >Name</label>
                <input asp-for="name" value="@ViewBag.User.name" />
            </div>
            <div>
                <label asp-for="email">Email</label>
                <input asp-for="email" value="@ViewBag.User.email" type="email" />
            </div>
            <div>
                <label asp-for="tel" >Telephone</label>
                <input asp-for="tel" value="@ViewBag.User.tel" type="tel" />
            </div>
            

            <div>
                <button type="submit" class="btnSave">SAVE</button>
            </div>
        </form>
    </div>
</div>