<link rel="stylesheet" href="/css/changeButton.css">

<div class="profilHdr">
    <a asp-controller="profil" asp-action="index" class="home txtAlign">PROFIL</a>
    <a asp-controller="profil" asp-action="favorite" class="home txtAlign">FAVORITE</a>
    <a asp-controller="chat" asp-action="index" class="home txtAlign">CHAT</a>
    @if (ViewBag.role != "user")
    {
        <a asp-controller="profil" asp-action="offers" class="home txtAlign">OFFERS</a>
        if (ViewBag.role == "admin")
        {
            <a asp-controller="profil" asp-action="brokers" class="home txtAlign">BROKERS</a>
            <a asp-controller="profil" asp-action="users" class="home txtAlign">USERS</a>
            <a asp-controller="profil" asp-action="labels" class="home txtAlign">LABELS</a>
        }

    }


</div>
@if (TempData["Message"] != null)
{
    <div class="change">@TempData["Message"]</div>
}